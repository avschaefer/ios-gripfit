export default function GripFitMockScreens() {
  const [active, setActive] = useState("dashboard");
  const [connected, setConnected] = useState(true);
  const [hand, setHand] = useState("Right");

  const screen =
    active === "dashboard" ? (
      <DashboardScreen
        connected={connected}
        onStartTest={() => setActive("test")}
      />
    ) : active === "device" ? (
      <DeviceScreen
        scanning={!connected}
        connected={connected}
        onConnect={() => setConnected(true)}
        onStartTest={() => setActive("test")}
      />
    ) : active === "settings" ? (
      <SettingsScreen />
    ) : (
      <GripTestScreen
        hand={hand}
        onSwitchHand={() => setHand(hand === "Right" ? "Left" : "Right")}
      />
    );

  return (
    <div className="min-h-screen w-full bg-[#05060C] p-10">
      <div className="mx-auto max-w-6xl">
        <div className="mb-6">
          <div className="text-2xl font-semibold text-white tracking-tight">
            GripFit — Modern BLE Health App Mock Screens
          </div>
          <div className="mt-1 text-sm text-white/55">
            WHOOP / Oura-inspired UI direction (dark premium + glass cards + neon
            accents)
          </div>
        </div>

        <div className="grid grid-cols-1 gap-8 lg:grid-cols-2">
          <div className="flex items-start justify-center">
            <div className="relative">
              {screen}
              <TabBar
                active={active === "test" ? "dashboard" : active}
                onChange={(k) => setActive(k)}
              />
            </div>
          </div>

          <div className="space-y-4">
            <GlassCard className="p-6">
              <div className="text-sm font-semibold text-white">
                Screen Controls
              </div>
              <div className="mt-4 grid grid-cols-2 gap-3">
                <button
                  onClick={() => setActive("dashboard")}
                  className={cn(
                    "rounded-2xl border border-white/10 bg-white/5 px-4 py-4 text-sm font-semibold text-white/75 hover:bg-white/8 transition",
                    active === "dashboard" && "bg-white/10 text-white"
                  )}
                >
                  Dashboard
                </button>
                <button
                  onClick={() => setActive("device")}
                  className={cn(
                    "rounded-2xl border border-white/10 bg-white/5 px-4 py-4 text-sm font-semibold text-white/75 hover:bg-white/8 transition",
                    active === "device" && "bg-white/10 text-white"
                  )}
                >
                  Device
                </button>
                <button
                  onClick={() => setActive("test")}
                  className={cn(
                    "rounded-2xl border border-white/10 bg-white/5 px-4 py-4 text-sm font-semibold text-white/75 hover:bg-white/8 transition",
                    active === "test" && "bg-white/10 text-white"
                  )}
                >
                  Grip Test
                </button>
                <button
                  onClick={() => setActive("settings")}
                  className={cn(
                    "rounded-2xl border border-white/10 bg-white/5 px-4 py-4 text-sm font-semibold text-white/75 hover:bg-white/8 transition",
                    active === "settings" && "bg-white/10 text-white"
                  )}
                >
                  Settings
                </button>
              </div>

              <div className="mt-5 flex items-center justify-between rounded-2xl border border-white/10 bg-white/4 px-4 py-4">
                <div>
                  <div className="text-sm font-semibold text-white">Device</div>
                  <div className="text-xs text-white/55">
                    Toggle connected state
                  </div>
                </div>
                <button
                  onClick={() => setConnected((v) => !v)}
                  className={cn(
                    "rounded-full px-4 py-2 text-xs font-semibold transition",
                    connected
                      ? "bg-emerald-400/15 text-emerald-200 border border-emerald-400/25"
                      : "bg-white/6 text-white/70 border border-white/10"
                  )}
                >
                  {connected ? "Connected" : "Offline"}
                </button>
              </div>
            </GlassCard>

            <GlassCard className="p-6">
              <div className="text-sm font-semibold text-white">
                Design System Highlights
              </div>
              <ul className="mt-4 space-y-2 text-sm text-white/65">
                <li>• Dark premium background (WHOOP/Oura baseline)</li>
                <li>• Glass cards + blur + soft shadows</li>
                <li>• Hero metric (big numbers) prioritized</li>
                <li>• Subtle neon gradients for premium feel</li>
                <li>• Rounded everything (pills + 2xl radii)</li>
                <li>• Micro-interactions (scan pulse + glow ring)</li>
              </ul>
            </GlassCard>

            <div className="text-xs text-white/40">
              Note: This is a UI mock, not production app code. It is intended as
              a direct baseline for Figma + SwiftUI implementation.
            </div>
          </div>
        </div>
      </div>
    </div>
  );
}
