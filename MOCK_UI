            <div>Peak: 112 lb</div>
          </div>
        </GlassCard>

        <GlassCard className="p-5">
          <div className="flex items-center justify-between">
            <div className="text-sm font-semibold text-white">Recent Sessions</div>
            <div className="text-xs text-white/55">View all</div>
          </div>

          <div className="mt-4 space-y-3">
            {[
              { date: "Feb 18", value: "112 lb", hand: "Right", tag: "PR" },
              { date: "Feb 16", value: "106 lb", hand: "Left", tag: "" },
              { date: "Feb 14", value: "103 lb", hand: "Right", tag: "" },
            ].map((row, idx) => (
              <div
                key={idx}
                className="flex items-center justify-between rounded-2xl border border-white/8 bg-white/4 px-4 py-3"
              >
                <div>
                  <div className="text-sm font-semibold text-white">
                    {row.value}
                  </div>
                  <div className="text-xs text-white/55">
                    {row.date} · {row.hand} Hand
                  </div>
                </div>
                <div className="flex items-center gap-2">
                  {row.tag ? (
                    <div className="rounded-full bg-gradient-to-r from-[#4C7DFF] via-[#8B5CFF] to-[#2DE2C5] px-3 py-1 text-[11px] font-bold text-white">
                      {row.tag}
                    </div>
                  ) : null}
                  <ChevronRight className="h-4 w-4 text-white/35" />
                </div>
              </div>
            ))}
          </div>
        </GlassCard>

        <PrimaryButton
          icon={Activity}
          onClick={onStartTest}
          className={cn(!connected && "opacity-60")}
        >
          Start New Grip Test
        </PrimaryButton>

        {!connected ? (
          <div className="text-center text-xs text-white/50">
            Connect your device to begin testing.
          </div>
        ) : null}
      </div>
    </ScreenShell>
  );
}

function DeviceScreen({ scanning = true, connected = false, onConnect, onStartTest }) {
  const devices = useMemo(
    () => [
      { name: "GripFit Pro", rssi: "Strong", battery: 0.84 },
      { name: "GripFit Mini", rssi: "Medium", battery: 0.56 },
      { name: "GripFit Sensor", rssi: "Weak", battery: 0.22 },
    ],
    []
  );

  return (
    <ScreenShell
      title="Device"
      rightSlot={
        scanning ? (
          <Pill tone="neutral">
            <RefreshCcw className="h-3.5 w-3.5" /> Searching
          </Pill>
        ) : connected ? (
          <Pill tone="live">
            <span className="h-2 w-2 rounded-full bg-emerald-300" /> Connected
          </Pill>
        ) : (
          <Pill tone="offline">
            <span className="h-2 w-2 rounded-full bg-white/30" /> Idle
          </Pill>
        )
      }
    >
      <div className="space-y-4">
        <GlassCard className="p-5">
          <div className="flex items-start justify-between">
            <div>
              <div className="text-sm font-semibold text-white">
                {connected ? "GripFit Pro" : "No device connected"}
              </div>
              <div className="mt-1 text-xs text-white/55">
                {connected
                  ? "BLE active · Signal strong"
                  : "Scan for nearby grip devices"}
              </div>
            </div>
            <div className="flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs font-semibold text-white/70">
              {connected ? (
                <>
                  <BatteryIcon level={0.84} /> 84%
                </>
              ) : (
                <>
                  <Wifi className="h-4 w-4" /> --
                </>
              )}
            </div>
          </div>

          <div className="mt-5 flex items-center justify-center">
            <div className="relative">
              <motion.div
                animate={scanning ? { scale: [1, 1.18, 1] } : { scale: 1 }}
                transition={{ duration: 1.6, repeat: scanning ? Infinity : 0 }}
                className="h-28 w-28 rounded-full border border-[#4C7DFF]/40 bg-[#4C7DFF]/10"
              />
              <motion.div
                animate={scanning ? { scale: [1, 1.45, 1] } : { scale: 1 }}
                transition={{ duration: 1.9, repeat: scanning ? Infinity : 0 }}
                className="absolute inset-0 h-28 w-28 rounded-full border border-[#8B5CFF]/30 bg-[#8B5CFF]/5"
              />
              <motion.div
                animate={scanning ? { scale: [1, 1.7, 1] } : { scale: 1 }}
                transition={{ duration: 2.2, repeat: scanning ? Infinity : 0 }}
                className="absolute inset-0 h-28 w-28 rounded-full border border-[#2DE2C5]/25 bg-[#2DE2C5]/5"
              />

              <div className="absolute inset-0 flex items-center justify-center">
                <Bluetooth className="h-8 w-8 text-white" />
              </div>
            </div>
          </div>

          <div className="mt-5 text-center text-xs text-white/55">
            {scanning ? "Scanning for nearby devices…" : "Ready"}
          </div>
        </GlassCard>

        <GlassCard className="p-5">
          <div className="flex items-center justify-between">
            <div className="text-sm font-semibold text-white">Nearby Devices</div>
            <div className="text-xs text-white/55">Auto-refresh</div>
          </div>

          <div className="mt-4 space-y-3">
            {devices.map((d, idx) => (
              <div
                key={idx}
                className="flex items-center justify-between rounded-2xl border border-white/8 bg-white/4 px-4 py-3"
              >
                <div>
                  <div className="text-sm font-semibold text-white">
                    {d.name}
                  </div>
                  <div className="mt-0.5 text-xs text-white/55">
                    Signal: {d.rssi}
                  </div>
                </div>
                <div className="flex items-center gap-2">
                  <div className="hidden sm:flex items-center gap-1 rounded-full border border-white/10 bg-white/5 px-2 py-1 text-[11px] font-semibold text-white/65">
                    <BatteryIcon level={d.battery} />
                    {Math.round(d.battery * 100)}%
                  </div>
                  <button
                    onClick={onConnect}
                    className="rounded-full border border-white/10 bg-white/6 px-4 py-2 text-xs font-semibold text-white/80 hover:bg-white/10 transition"
                  >
                    Pair
                  </button>
                </div>
              </div>
            ))}
          </div>
        </GlassCard>

        <PrimaryButton icon={Activity} onClick={onStartTest}>
          Start Grip Test
        </PrimaryButton>

        <SecondaryButton icon={RefreshCcw}>Rescan</SecondaryButton>
      </div>
    </ScreenShell>
  );
}

function GripTestScreen({ hand = "Right", onSwitchHand }) {
  const [force, setForce] = useState(74);

  return (
    <ScreenShell
      title="Grip Test"
      rightSlot={<Pill tone="live">◉ Live</Pill>}
    >
      <div className="space-y-4">
        <GlassCard className="p-5">
          <div className="flex items-center justify-between">
            <div>
              <div className="text-xs font-semibold uppercase tracking-widest text-white/55">
                Active Hand
              </div>
              <div className="mt-2 text-lg font-semibold text-white">
                {hand} Hand
              </div>
            </div>
            <button
              onClick={onSwitchHand}
              className="rounded-full border border-white/10 bg-white/6 px-4 py-2 text-xs font-semibold text-white/80 hover:bg-white/10 transition"
            >
              Switch
            </button>
          </div>

          <div className="mt-6 flex items-center justify-center">
            <div className="relative h-56 w-56">
              <div className="absolute inset-0 rounded-full border border-white/10 bg-white/5" />
              <div className="absolute inset-3 rounded-full border border-white/10 bg-[#070A12]" />

              <div className="absolute inset-0 flex items-center justify-center">
                <div className="text-center">
                  <div className="text-xs font-semibold uppercase tracking-widest text-white/55">
                    Live Force
                  </div>
                  <div className="mt-3 text-6xl font-bold tracking-tight text-white">
                    {force}
                  </div>
                  <div className="mt-1 text-sm font-semibold text-white/60">
                    lb
                  </div>
                </div>
              </div>

              {/* glow ring */}
              <motion.div
                animate={{
                  boxShadow: [
                    "0 0 0px rgba(76,125,255,0.0)",
                    "0 0 40px rgba(76,125,255,0.25)",
                    "0 0 0px rgba(76,125,255,0.0)",
                  ],
                }}
                transition={{ duration: 2.2, repeat: Infinity }}
                className="absolute inset-0 rounded-full border border-[#4C7DFF]/30"
              />
            </div>
          </div>

          <div className="mt-6 grid grid-cols-2 gap-3">
            <div className="rounded-2xl border border-white/8 bg-white/4 p-4">
              <div className="text-xs font-semibold uppercase tracking-widest text-white/55">
                Peak
              </div>
              <div className="mt-2 text-2xl font-bold text-white">112</div>
              <div className="text-xs text-white/55">lb</div>
            </div>
            <div className="rounded-2xl border border-white/8 bg-white/4 p-4">
              <div className="text-xs font-semibold uppercase tracking-widest text-white/55">
                Timer
              </div>
              <div className="mt-2 text-2xl font-bold text-white">03.2</div>
              <div className="text-xs text-white/55">sec</div>
            </div>
          </div>

          <div className="mt-4 text-xs text-white/55">
            Squeeze hard. Hold steady.
          </div>
        </GlassCard>

        <GlassCard className="p-5">
          <div className="flex items-center justify-between">
            <div className="text-sm font-semibold text-white">Simulate Force</div>
            <div className="text-xs text-white/55">(mock UI)</div>
          </div>

          <input
            type="range"
            min={0}
            max={140}
            value={force}
            onChange={(e) => setForce(parseInt(e.target.value, 10))}
            className="mt-4 w-full accent-white"
          />

          <div className="mt-2 flex items-center justify-between text-xs text-white/55">
            <span>0</span>
            <span>140</span>
          </div>
        </GlassCard>

        <PrimaryButton>Save Result</PrimaryButton>
        <SecondaryButton>Discard</SecondaryButton>
      </div>
    </ScreenShell>
  );
}

