import React, { useMemo, useState } from "react";
import { motion } from "framer-motion";
import {
  Bluetooth,
  Home,
  Settings as SettingsIcon,
  Activity,
  BatteryFull,
  BatteryMedium,
  BatteryLow,
  Wifi,
  ChevronRight,
  User,
  LogOut,
  Shield,
  FileText,
  RefreshCcw,
  TrendingUp,
} from "lucide-react";

// ------------------------------------------------------------
// GripFit — High-Fidelity Mock Screens (WHOOP/Oura-inspired)
// Single-file React component for canvas preview.
// ------------------------------------------------------------

function cn(...classes) {
  return classes.filter(Boolean).join(" ");
}

function GlassCard({ className = "", children }) {
  return (
    <div
      className={cn(
        "rounded-3xl border border-white/10 bg-white/5 backdrop-blur-xl shadow-[0_18px_60px_rgba(0,0,0,0.45)]",
        className
      )}
    >
      {children}
    </div>
  );
}

function Pill({ children, tone = "neutral" }) {
  const toneClasses =
    tone === "live"
      ? "border-emerald-400/30 bg-emerald-400/10 text-emerald-200"
      : tone === "offline"
        ? "border-white/10 bg-white/5 text-white/60"
        : "border-white/10 bg-white/5 text-white/70";

  return (
    <div
      className={cn(
        "inline-flex items-center gap-2 rounded-full border px-3 py-1 text-xs font-medium",
        toneClasses
      )}
    >
      {children}
    </div>
  );
}

function PrimaryButton({ children, className = "", icon: Icon, onClick }) {
  return (
    <button
      onClick={onClick}
      className={cn(
        "w-full rounded-full px-5 py-4 text-sm font-semibold text-white shadow-[0_18px_60px_rgba(76,125,255,0.22)]",
        "bg-gradient-to-r from-[#4C7DFF] via-[#8B5CFF] to-[#2DE2C5]",
        "hover:brightness-110 active:scale-[0.99] transition",
        "flex items-center justify-center gap-2",
        className
      )}
    >
      {Icon ? <Icon className="h-4 w-4" /> : null}
      {children}
    </button>
  );
}

function SecondaryButton({ children, className = "", icon: Icon, onClick }) {
  return (
    <button
      onClick={onClick}
      className={cn(
        "w-full rounded-full px-5 py-4 text-sm font-semibold",
        "border border-white/12 bg-white/6 text-white/80",
        "hover:bg-white/10 active:scale-[0.99] transition",
        "flex items-center justify-center gap-2",
        className
      )}
    >
      {Icon ? <Icon className="h-4 w-4" /> : null}
      {children}
    </button>
  );
}

function TogglePills({ left, right, value, onChange }) {
  return (
    <div className="flex rounded-full border border-white/10 bg-white/5 p-1">
      <button
        onClick={() => onChange(left)}
        className={cn(
          "flex-1 rounded-full px-4 py-2 text-xs font-semibold transition",
          value === left
            ? "bg-white/12 text-white shadow-inner"
            : "text-white/60 hover:text-white/80"
        )}
      >
        {left}
      </button>
      <button
        onClick={() => onChange(right)}
        className={cn(
          "flex-1 rounded-full px-4 py-2 text-xs font-semibold transition",
          value === right
            ? "bg-white/12 text-white shadow-inner"
            : "text-white/60 hover:text-white/80"
        )}
      >
        {right}
      </button>
    </div>
  );
}

function StatNumber({ value, unit }) {
  return (
    <div className="flex items-end gap-2">
      <div className="text-5xl font-bold tracking-tight text-white">
        {value}
      </div>
      <div className="pb-2 text-sm font-semibold text-white/60">{unit}</div>
    </div>
  );
}

function MiniSparkline() {
  // intentionally decorative — Oura/WHOOP style minimal chart
  return (
    <div className="relative h-16 w-full overflow-hidden rounded-2xl border border-white/8 bg-white/3">
      <div className="absolute inset-0 bg-[radial-gradient(circle_at_20%_10%,rgba(76,125,255,0.35),transparent_60%)]" />
      <svg
        className="absolute inset-0"
        viewBox="0 0 300 80"
        preserveAspectRatio="none"
      >
        <path
          d="M0,55 C40,50 60,30 95,34 C130,39 140,60 175,55 C210,50 220,20 250,26 C270,30 285,38 300,35"
          fill="none"
          stroke="rgba(76,125,255,0.9)"
          strokeWidth="3"
          strokeLinecap="round"
        />
        <path
          d="M0,55 C40,50 60,30 95,34 C130,39 140,60 175,55 C210,50 220,20 250,26 C270,30 285,38 300,35"
          fill="none"
          stroke="rgba(139,92,255,0.55)"
          strokeWidth="10"
          strokeLinecap="round"
          opacity="0.2"
        />
      </svg>
      <div className="absolute inset-x-0 bottom-0 h-px bg-white/10" />
    </div>
  );
}

function BatteryIcon({ level = 0.84 }) {
  if (level > 0.65) return <BatteryFull className="h-4 w-4" />;
  if (level > 0.3) return <BatteryMedium className="h-4 w-4" />;
  return <BatteryLow className="h-4 w-4" />;
}

function TabBar({ active, onChange }) {
  const tabs = [
    { key: "dashboard", label: "Dashboard", icon: Home },
    { key: "device", label: "Device", icon: Bluetooth },
    { key: "settings", label: "Settings", icon: SettingsIcon },
  ];

  return (
    <div className="absolute bottom-5 left-1/2 w-[92%] -translate-x-1/2">
      <div className="rounded-full border border-white/10 bg-white/6 px-2 py-2 backdrop-blur-xl shadow-[0_18px_60px_rgba(0,0,0,0.45)]">
        <div className="grid grid-cols-3 gap-2">
          {tabs.map((t) => {
            const Icon = t.icon;
            const isActive = active === t.key;
            return (
              <button
                key={t.key}
                onClick={() => onChange(t.key)}
                className={cn(
                  "relative flex items-center justify-center gap-2 rounded-full px-4 py-3 text-xs font-semibold transition",
                  isActive
                    ? "bg-white/10 text-white"
                    : "text-white/55 hover:text-white/80"
                )}
              >
                <Icon className="h-4 w-4" />
                <span className={cn(isActive ? "opacity-100" : "opacity-70")}>
                  {t.label}
                </span>
                {isActive ? (
                  <div className="absolute inset-x-6 -bottom-1 h-[2px] rounded-full bg-gradient-to-r from-[#4C7DFF] via-[#8B5CFF] to-[#2DE2C5]" />
                ) : null}
              </button>
            );
          })}
        </div>
      </div>
    </div>
  );
}

function ScreenShell({ title, rightSlot, children }) {
  return (
    <div className="relative h-[760px] w-[360px] overflow-hidden rounded-[42px] border border-white/10 bg-[#070A12] shadow-[0_30px_120px_rgba(0,0,0,0.6)]">
      {/* background glow */}
      <div className="absolute inset-0 bg-[radial-gradient(circle_at_20%_10%,rgba(76,125,255,0.25),transparent_55%)]" />
      <div className="absolute inset-0 bg-[radial-gradient(circle_at_80%_20%,rgba(139,92,255,0.18),transparent_55%)]" />
      <div className="absolute inset-0 bg-[radial-gradient(circle_at_40%_85%,rgba(45,226,197,0.12),transparent_55%)]" />

      {/* top safe area */}
      <div className="relative z-10 px-6 pt-10">
        <div className="flex items-start justify-between">
          <div>
            <div className="text-3xl font-semibold tracking-tight text-white">
              {title}
            </div>
            <div className="mt-1 text-sm text-white/55">
              Grip strength insights
            </div>
          </div>
          <div className="pt-1">{rightSlot}</div>
        </div>
      </div>

      <div className="relative z-10 px-6 pt-6 pb-28">{children}</div>

      {/* home indicator */}
      <div className="absolute bottom-2 left-1/2 h-1.5 w-28 -translate-x-1/2 rounded-full bg-white/20" />
    </div>
  );
}

