              <div className="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs font-semibold text-white/70">
                <TrendingUp className="h-4 w-4" />
                +6%
              </div>
              <div className="rounded-full bg-gradient-to-r from-[#4C7DFF] via-[#8B5CFF] to-[#2DE2C5] px-3 py-1 text-[11px] font-bold text-white">
                PR
              </div>
            </div>
          </div>

          <div className="mt-5">
            <MiniSparkline />
